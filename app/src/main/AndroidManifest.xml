<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.castlesword.librarybooklocator" >

    <uses-permission android:name="android.permission.INTERNET" />

    <user-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".NotifyService" />

        <activity android:name=".LoginActivity" />
        <activity android:name=".SecondaryActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".BookDetailsActivity" />
        <activity android:name=".DepartmentActivity" />
        <activity android:name=".ThirdActivity" />
        <activity android:name=".ForthActivity" />
        <activity android:name=".LastActivity" />
        <activity android:name=".YourBook" />
        <activity android:name=".AddBooks" />
        <activity android:name=".UserBookDetails" />
        <activity android:name=".RenewBook" >
        </activity>
        <activity android:name=".Register" >
        </activity>
    </application>

</manifest>
